@{
    ViewData["Title"] = "Home Page";
}
@using (Html.BeginForm("Convert", "Home", FormMethod.Post))
{
    <div class="form-group mt-5 p-4 w-100 h-100 bg-light" style="color: #737373;">
        <div class="row">
            <div class="col-md-3 mb-2">
                <h5>Amount</h5>
            </div>
            <div class="col-md-4 mb-2">
                <input type="text" name="amount" class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 mb-2">
                <h5>Current Currency</h5>
            </div>
            <div class="col-md-3 mb-2">
                <select class="form-control" asp-items="ViewBag.CurrencyList" name="currentCurrency">
                    <option value="">-- Select Category --</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 mb-3">
                <h5>Target Currency</h5>
            </div>
            <div class="col-md-4 mb-3">
                <select class="form-control" asp-items="ViewBag.CurrencyList" name="targetCurrency">
                    <option value="">-- Select Category --</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-success">Convert</button>
                <button type="submit" class="btn btn-danger">Cancel</button>
            </div>
        </div>
    </div>

}

